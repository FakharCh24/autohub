rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check authentication
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to validate image
    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to check file size (max 5MB)
    function isValidSize() {
      return request.resource.size < 5 * 1024 * 1024;
    }
    
    // Profile pictures
    match /profiles/{userId}/{allPaths=**} {
      // Anyone can read profile pictures
      allow read: if true;
      
      // Only the user can upload/update their own profile picture
      allow write: if isSignedIn() 
                   && request.auth.uid == userId
                   && isImage()
                   && isValidSize();
      
      // Only the user can delete their profile picture
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Car images
    match /cars/{userId}/{allPaths=**} {
      // Anyone can read car images
      allow read: if true;
      
      // Only authenticated users can upload car images for their listings
      allow write: if isSignedIn()
                   && request.auth.uid == userId
                   && isImage()
                   && isValidSize();
      
      // Only the owner can delete car images
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Chat media
    match /chat/{userId}/{allPaths=**} {
      // Only authenticated users can read chat media
      allow read: if isSignedIn();
      
      // Users can upload chat media
      allow write: if isSignedIn()
                   && request.auth.uid == userId
                   && isValidSize();
      
      // Users can delete their own chat media
      allow delete: if isSignedIn() && request.auth.uid == userId;
    }
    
    // Block all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
