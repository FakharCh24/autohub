rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (for displaying seller info)
      allow read: if isSignedIn();
      
      // Only the owner can create/update their own profile
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      
      // Only owner can delete
      allow delete: if isOwner(userId);
    }
    
    // Cars collection
    match /cars/{carId} {
      // Anyone authenticated can read active cars
      allow read: if isSignedIn();
      
      // Only authenticated users can create cars
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Only car owner can update their own car
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Only car owner can delete
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Reviews collection
    match /reviews/{reviewId} {
      // Anyone can read reviews
      allow read: if isSignedIn();
      
      // Only authenticated users can create reviews
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Only review author can update their review
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Only review author can delete their review
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Users can only read their own notifications
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // System can create notifications (or authenticated users)
      allow create: if isSignedIn();
      
      // Users can update their own notifications (mark as read)
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own notifications
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Chats collection (for chat messages)
    match /chats/{chatId}/messages/{messageId} {
      // Users can read messages if they're part of the chat
      allow read: if isSignedIn();
      
      // Users can create messages
      allow create: if isSignedIn();
      
      // Users can update their own messages
      allow update: if isSignedIn() && resource.data.senderId == request.auth.uid;
      
      // Users can delete their own messages
      allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
    }
    
    // Recently Viewed collection
    match /recentlyViewed/{viewId} {
      // Users can read their own recently viewed items
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Users can create their own recently viewed items
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own recently viewed items
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own recently viewed items
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Purchases collection
    match /purchases/{purchaseId} {
      // Users can read their own purchases (as buyer or seller)
      allow read: if isSignedIn() && 
                     (resource.data.buyerId == request.auth.uid || 
                      resource.data.sellerId == request.auth.uid);
      
      // Users can create purchases
      allow create: if isSignedIn() && request.resource.data.buyerId == request.auth.uid;
      
      // Only buyer can update their purchase record
      allow update: if isSignedIn() && resource.data.buyerId == request.auth.uid;
      
      // Only buyer can delete their purchase record
      allow delete: if isSignedIn() && resource.data.buyerId == request.auth.uid;
    }
    
    // Price Alerts collection
    match /price_alerts/{alertId} {
      // Users can only read their own price alerts
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Users can create their own price alerts
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      
      // Users can update their own price alerts
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
      
      // Users can delete their own price alerts
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
    
    // Block all other paths by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
